<body>
  <section class="card" id="app">
    <h1>Curiosity Challenge</h1>
    <div id="score" class="muted">Press <strong>Start</strong> to begin</div>
    <div class="question" id="question"></div>
    <div class="choices" id="choices"></div>

    <div class="row">
      <div class="muted" id="progress"></div>
      <div>
        <button class="btn secondary" id="restart">Restart</button>
        <button class="btn" id="start">Start</button>
      </div>
    </div>
  </section>

  <script>
    const qs = [
      {q: 'What planet is known as the Red Planet?', a:['Venus','Mars','Jupiter','Mercury'], correct:1},
      {q: 'What is H2O commonly called?', a:['Salt','Water','Hydrogen','Oxygen'], correct:1},
      {q: 'Which force keeps us on the ground?', a:['Magnetism','Friction','Gravity','Electricity'], correct:2},
      {q: 'What gas do plants produce during photosynthesis?', a:['Oxygen','Carbon dioxide','Nitrogen','Helium'], correct:0},
      {q: 'What part of the cell contains genetic material?', a:['Mitochondria','Nucleus','Ribosome','Cell wall'], correct:1}
    ];

    let index=0, score=0, inProgress=false;
    const el = id=>document.getElementById(id);

    function start(){ index=0; score=0; inProgress=true; el('start').disabled=true; el('score').textContent='Score: 0'; show(); }

    function show(){
      const item = qs[index];
      el('question').textContent = item ? item.q : 'Well done!';
      el('choices').innerHTML='';
      if(!item){ el('progress').textContent = `Completed â€” Final score ${score}/${qs.length}`; el('start').disabled=false; inProgress=false; return; }
      item.a.forEach((choice,i)=>{
        const btn = document.createElement('button'); btn.textContent = choice;
        btn.addEventListener('click',()=>select(i,btn));
        el('choices').appendChild(btn);
      });
      el('progress').textContent = `Question ${index+1} of ${qs.length}`;
    }

    function select(i,btn){ if(!inProgress) return; const correct = qs[index].correct;
      Array.from(el('choices').children).forEach(b=>b.disabled=true);
      if(i===correct){ btn.classList.add('correct'); score++; el('score').textContent = `Score: ${score}`; }
      else{ btn.classList.add('wrong'); el('choices').children[correct].classList.add('correct'); }
      index++;
      setTimeout(show,700);
    }

    el('start').addEventListener('click', start);
    el('restart').addEventListener('click', ()=>{ index=0; score=0; el('score').textContent='Press Start to begin'; el('question').textContent=''; el('choices').innerHTML=''; el('progress').textContent=''; el('start').disabled=false; inProgress=false; });
  </script>
</body>
</html>
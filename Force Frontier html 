<body>
  <h2>Force Frontier â€” tiny demo</h2>
  <div id="arena">
    <div id="ship"></div>
  </div>
  <div>
    <button id="thrust">Apply Force</button>
    <button id="reset">Reset</button>
    <small>Click <b>Apply Force</b> or use Space to add velocity.</small>
  </div>

  <script>
    const ship = document.getElementById('ship');
    let x=20, vx=0; const dt=1/60, friction=0.99;
    function step(){
      vx *= friction;
      x += vx;
      if(x < 0){ x=0; vx*=-0.6 }
      if(x > 524){ x=524; vx*=-0.6 }
      ship.style.left = x + 'px';
      requestAnimationFrame(step);
    }
    document.getElementById('thrust').onclick = ()=>{ vx += 6 }; 
    document.getElementById('reset').onclick = ()=>{ x=20; vx=0 };
    window.addEventListener('keydown', e=>{ if(e.code==='Space') vx+=6 });
    step();
  </script>
</body>
